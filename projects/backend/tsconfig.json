{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "@config": ["./src/config"],
      "@core/*": ["./src/core/*"],
      "@infra/*": ["./src/infra/*"]
    }
  },
  "include": ["src/**/*.ts"]
}
